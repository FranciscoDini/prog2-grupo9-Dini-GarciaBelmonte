<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head')  %>
<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	 <% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= usuario.fotoPerfil %>"  alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuario.nombreUsuario %></h1>

						<% if (userSession && userSession.id === usuario.id) { %>						
						<a class="btn mt-3 ml-4" href="/profile/edit">EDITAR</a>
						<% } %>
					
				</div>
				<div>
					<ul class="">
						<li><%= usuario.camisetas.length %> productos</li>
						<li><%= usuario.comentarios.length%> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for(let i = 0; i < usuario.camisetas.length ; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/id/<%= usuario.camisetas[i].id %>">
							<figure class="product-box_image">
								<img src="<%= usuario.camisetas[i].fotoProducto %>" alt="prod">
							</figure>
							<article class="product-box_data">
								<h2><%= usuario.camisetas[i].nombreProducto%></h2>
								<p><%= usuario.camisetas[i].descripcion%></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>
<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head')  %>
<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	 <% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	<!-- /Header -->


	<div class="container products-wrapper">
		<div class="row formBox">
			
			<h2 class="products-title">Editar Producto</h2>
			
			<% if (locals.errors) { %>
				<div class="divErrores"> 
					<%	for (let i = 0; i < errors.length; i++) { %>					
				<p class="showError"><%= errors[i].msg %></p>	
				<%} %>
				</div>

		<%	} %>

			<% if (locals.old) { %>
				
				<form action="/products/update" method="POST">
					<input type="hidden" name="id" value="<%= product.id %>">
	
					<label for="imagen">Imagen:</label><br>
					<input type="text" id="fotoProducto" name="fotoProducto" value="<%= old.fotoProducto %>" ><br>
					
					<label for="nombreProducto">Nombre del Producto:</label><br>
					<input type="text" id="nombreProducto" name="nombreProducto" value="<%= old.nombreProducto %>" ><br>
					
					<label for="descripcion">Descripción:</label><br>
					<textarea id="descripcion" name="descripcion" value="<%= old.descripcion %>" ></textarea><br>
					
					<input type="submit" value="Guardar Cambios">
				</form>

		<%	}else{ %>
			<form action="/products/update" method="POST">
                <input type="hidden" name="id" value="<%= product.id %>">

				<label for="imagen">Imagen:</label><br>
				<input type="text" id="fotoProducto" name="fotoProducto" value="<%= product.fotoProducto %>" ><br>
				
				<label for="nombreProducto">Nombre del Producto:</label><br>
				<input type="text" id="nombreProducto" name="nombreProducto" value="<%= product.nombreProducto %>" ><br>
				
				<label for="descripcion">Descripción:</label><br>
				<textarea id="descripcion" name="descripcion" value="<%= product.descripcion %>" ></textarea><br>
				
				<input type="submit" value="Guardar Cambios">
			</form>
	<%	}  %>

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>
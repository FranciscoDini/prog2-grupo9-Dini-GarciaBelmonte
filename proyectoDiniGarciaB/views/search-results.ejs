<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head')  %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show mis productos -->
			<% for(let i = 0; i < 8 ; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products">
							<figure class="product-box_image">
								<img src="<%= datos.productos[i].imagen %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= datos.productos[i].nombre %></h2>
								<p><%= datos.productos[i].descripcion %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>
<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head')  %>
<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	 <% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	 <!-- Novedades -->
	 <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Resultados de búsqueda</h2>
            </div>
            <!-- Show mis productos -->
            <% if (datos && datos.length > 0) { %>
                <% for(let i = 0; i < datos.length; i++) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <section class="product-box">
                            <a href="/products/id/<%= datos[i].id %>">
                                <figure class="product-box_image">
                                    <img src="<%= datos[i].fotoProducto %>" alt="default">
                                </figure>
                                <article class="product-box_data">
                                    <h2><%= datos[i].nombreProducto %></h2>
                                    <p><%= datos[i].descripcion %></p>
                                    <a href="/user/id/<%= datos[i].duenio.id %>"><%= datos[i].duenio.nombreUsuario %></a>
                                </article>
                            </a>
                        </section>
                    </div>
                <% } %>
            <% } else { %>
                <div class="col-12">
                    <p>No hay resultados para su criterio de búsqueda.</p>
                </div>
            <% } %>
        </div>
    </div>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>
<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head')  %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row formBox">
			
			<h2 class="products-title">Ingresar</h2>
			
			<!-- Show the "ultimos" products -->
			<form action="/" method="GET">
				<label for="usuario">Usuario (Email):</label><br>
				<input type="email" id="usuario" name="usuario" required><br>
				
				<label for="contrasenia">Contraseña:</label><br>
				<input type="password" id="contrasenia" name="contraseña" required><br>
				
				<label for="recordarme">Recordarme:</label>
				<input type="checkbox" id="recordarme" name="recordarme"><br>
				
				<input type="submit" value="Iniciar Sesión">
			</form>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>
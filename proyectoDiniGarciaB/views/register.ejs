<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head')  %>
<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	 <% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row formBox">
			
			<h2 class="products-title">Registrate</h2>
			
			<!-- Show the "ultimos" products -->
			<form action="/profile/register" method="POST">
				<label for="email">Email:</label><br>
				<input type="email" id="email" name="email" ><br>
				<% if (locals.errores && errores.email) { %>
					<p class="error"><%= errores.email.msg %></p>
				<% } %>
				
				<label for="usuario">Usuario:</label><br>
				<input type="text" id="usuario" name="usuario" ><br>
				<% if (locals.errores && errores.usuario) { %>
					<p class="error"><%= errores.usuario.msg %></p>
				<% } %>
				
				<label for="contrasenia">Contrase√±a:</label><br>
				<input type="password" id="contrasenia" name="contrasenia" ><br>
				<% if (locals.errores && errores.contrasenia) { %>
					<p class="error"><%= errores.contrasenia.msg %></p>
				<% } %>
				
				<label for="fecha_nacimiento">Fecha de Nacimiento:</label><br>
				<input type="date" id="fechaNacimiento" name="fechaNacimiento" ><br>
				
				<label for="nro_documento">Nro. de Documento:</label><br>
				<input type="number" id="nroDocumento" name="nroDocumento" ><br>
				
				<label for="foto_perfil">Foto de Perfil:</label><br>
				<input type="text" id="fotoPerfil" name="fotoPerfil"><br>
				
				<input type="submit" value="Registrarse">
			</form>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>
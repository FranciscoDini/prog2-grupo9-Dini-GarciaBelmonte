<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head')  %>
<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	 <% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row formBox">
			
			<h2 class="products-title">Agregar productos</h2>
			
			<% if (locals.errors) { %>
				<div class="divErrores"> 
					<%	for (let i = 0; i < errors.length; i++) { %>					
				<p class="showError"><%= errors[i].msg %></p>	
				<%} %>
				</div>

		<%	} %>

			<!-- Show the "ultimos" products -->
			<form action="/products/add" method="POST">
				<label for="imagen">Imagen:</label><br>
				<input type="text" id="fotoProducto" name="fotoProducto" value="<%= locals.old && old.fotoProducto ? old.fotoProducto : ""  %>"><br>
				
				<label for="nombre_producto">Nombre del Producto:</label><br>
				<input type="text" id="nombreProducto" name="nombreProducto" value="<%= locals.old && old.nombreProducto ? old.nombreProducto : ""  %>" ><br>
				
				<label for="descripcion">Descripci√≥n:</label><br>
				<textarea id="descripcion" name="descripcion" value="<%= locals.old && old.descripcion ? old.descripcion : ""  %>" ></textarea><br>
				
				<input type="submit" value="Agregar Producto">
			</form>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>